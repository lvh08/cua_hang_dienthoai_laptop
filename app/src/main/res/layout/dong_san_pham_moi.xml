<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/bodet_listview">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|right"
            android:src="@drawable/new_corner_icon"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:weightSum="10">
            <ImageView
                android:id="@+id/imageViewAnhSanPhamMoiNhat"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"></ImageView>
            <TextView
                android:layout_gravity="center"
                android:textColor="#ff00"
                android:id="@+id/textViewGiaSanPhamMoiNhat"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Giá"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_weight="1"></TextView>
            <TextView
                android:textColor="#0E0E0E"
                android:id="@+id/textViewMoTaSanPhamMoiNhat"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal"
                android:text="Mô tả"
                android:textSize="16sp"
                android:layout_weight="4"></TextView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>