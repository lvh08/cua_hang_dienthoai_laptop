<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodet_listview"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/imageViewHinhAnhSanPham"
            android:src="@drawable/dienthoai"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:weightSum="10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewGiaSanPham"
                android:text="Giá"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ff00"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"></TextView>

            <TextView
                android:id="@+id/textViewMoTaSanPham"
                android:text="Mô tả"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:textColor="#0C0C0C"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>