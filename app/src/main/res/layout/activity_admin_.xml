<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F1E3E3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#46B9ED"
        android:text="Giao diện quản lý"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#020202"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewQuanLyDienThoai"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý điện thoại"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#020202"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2AA3D8"></View>
        <TextView
            android:id="@+id/textViewQuanLyLaptop"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý laptop"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#020202"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2AA3D8"></View>
        <TextView
            android:id="@+id/textViewQuanLyDonHang"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý đơn hàng"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#020202"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2AA3D8"></View>

        <TextView
            android:id="@+id/textViewDangXuatManHinhAdmin"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#020202"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2AA3D8"></View>
    </LinearLayout>
</LinearLayout>