<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.ManHinhChiTietSanPham">

    <androidx.appcompat.widget.Toolbar
        app:title="Chi tiết sản phẩm"
        android:id="@+id/toolBarChiTietSanPham"
        app:titleTextColor="#0B0B0B"
        android:background="#46B9ED"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageViewChiTietSanPham"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/dienthoai"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:text="Tên điện thoại"
                android:id="@+id/textViewChiTietTenSanPham"
                android:textStyle="bold"
                android:textColor="#0B0A0A"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:text="Giá"
                android:id="@+id/textViewChiTietGiaSanPham"
                android:textColor="#ff00"></TextView>
            <Spinner
                android:background="@drawable/bodet_listview"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/spinnerChiTietSanPham"
                android:textAlignment="center"
                android:layout_marginTop="5dp"></Spinner>
            <Button
                android:layout_margin="5dp"
                android:id="@+id/buttonDatMuaSanPham"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Thêm vào giỏ hàng"
                android:textSize="13dp"
                android:background="@drawable/bodet_listview"
                android:textColor="#0B0B0B"></Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả điện thoại"></TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="abc xyz"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewChiTietMoTaSanPham"></TextView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>