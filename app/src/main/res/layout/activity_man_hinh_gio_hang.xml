<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".screen.ManHinhGioHang">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Giỏ hàng"
        android:id="@+id/toolBarManHinhGioHang"
        android:background="#46B9ED"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:textColor="#121111"
                android:id="@+id/textViewThongBaoManHinhGioHang"
                android:layout_height="wrap_content"
                android:text="Giỏ hàng trống"
                android:layout_gravity="center"></TextView>

            <ListView
                android:layout_margin="5dp"
                android:id="@+id/listViewManHinhGioHang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Tổng tiền"
                    android:layout_marginTop="5dp"
                    android:textColor="#090909"></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="right|center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/textViewTongTienManHinhGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Giá trị"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff00"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:background="@drawable/custom_select_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Thanh toán giỏ hàng"
        android:layout_margin="5dp"
        android:id="@+id/buttonThanhToanManHinhGioHang"
        android:textColor="#0B0B0B"></Button>
    <Button
        android:layout_margin="5dp"
        android:background="@drawable/custom_select_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Tiếp tục mua hàng"
        android:id="@+id/buttonTiepTucMuaHang"
        android:textColor="#0E0E0E"></Button>
</LinearLayout>